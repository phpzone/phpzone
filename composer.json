{
    "name":        "phpzone/phpzone",
    "description": "A generic tool for the easy creation of YAML configured CLI applications",
    "type":        "library",
    "license":     "MIT",
    "authors":     [
        {
            "name":  "Jakub Zapletal",
            "email": "zapletal.jakub@gmail.com"
        }
    ],

    "require": {
        "php":                          ">=5.3",
        "symfony/console":              "~2.3",
        "symfony/yaml":                 "~2.3",
        "symfony/dependency-injection": "~2.3"
    },

    "require-dev": {
        "behat/behat":                         "~3.0",
        "phpspec/phpspec":                     "~2.2",
        "squizlabs/php_codesniffer":           "~2.0",
        "jakubzapletal/php_codesniffer-rules": "~0.1",
        "bossa/phpspec2-expect":               "~1.0",
        "symfony/filesystem":                  "~2.3"
    },

    "autoload": {
        "psr-4": {
            "PhpZone\\PhpZone\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "PhpZone\\Behat\\": "features/bootstrap"
        }
    },

    "minimum-stability": "alpha",

    "bin": ["bin/phpzone"]
}
